{%- comment -%}
  Filter Banner
    - Displays the filter banner for the collection section

  Params:
    - class: a string to be used as an additional class

  Version:
    1.0.0 - 2021/11/10
{%- endcomment -%}

<div class="c-filter-banner {{ class }}">
  <div class="c-filter-banner__inner">
    {%- comment -%} Title {%- endcomment -%}
    <h1 class="c-filter-banner__title">
      {{- collection.title | escape -}}
    </h1>

    {%- if collection.description != blank -%}
      <div class="c-filter-banner__description">
        {{- collection.description -}}
      </div>
    {%- endif -%}

    {%- comment -%} Toggles the filter drawer for mobile {%- endcomment -%}
    <button
      class="c-filter-banner__drawer-trigger o-heading--4 has-js"
      data-filter-toggle
    >
      {{- 'collections.collection.filter_button' | t -}}
    </button>

    {%- comment -%} Filters {%- endcomment -%}
    {%- render 'collection.faceted-nav' with {
      class: 'c-filter-banner__filters'
    } -%}
  </div>
</div>