.authority-wrapper {
  margin: 1.5625rem 0;
}

.authority-wrapper h2.title {
  margin-bottom: 1.5em;
}

.pc-custom-select {
  border: 1px solid #d9d9d9;
  border-radius: 5px;
  padding: 1rem;
  display: block;
  cursor: pointer;
  width: 100%;
  background: url('./../assets/icon-chevron-down.svg') no-repeat right 1rem center;
  background-size: 1rem auto;
  line-height: 1.3em;
}

.field__message--error{
  color:#88aa92;
  text-align: center;
  border: 1px solid currentColor;
  padding: 5px;
  border-radius: 9px;
}

.notice--error {
  background: #fff;
  border-color: #88aa92;
  color: #88aa92;
}

.notice--error .icon-svg {
  display: none;
}