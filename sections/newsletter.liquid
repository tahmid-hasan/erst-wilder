{%- comment -%}
  Newsletter Section
  - Displays a heading and customer sign up form

  Version:
    1.0.0 - 2022/10/23
{%- endcomment -%}

{{ 'sections.newsletter.css' | asset_url | stylesheet_tag }}

{%- comment -%} Assign variables {%- endcomment -%}
{%- liquid
  assign title = section.settings.title | escape
  assign subtitle = section.settings.subtitle | escape

  assign topWave = section.settings.top-wave
  assign topColor1 = section.settings.top-color-1
  assign topColor2 = section.settings.top-color-2
  assign isFlippedTop = section.settings.flip-top-wave

  assign bottomWave = section.settings.bottom-wave
  assign bottomColor1 = section.settings.bottom-color-1
  assign bottomColor2 = section.settings.bottom-color-2
  assign isFlippedBottom = section.settings.flip-bottom-wave
-%}

{%- if title != blank -%}

  {%- comment -%} Top Wave {%- endcomment -%}
  {%- if topWave != "0" -%}
    {%- render 'object.wave' with {
      waveNumber:topWave
      color1: topColor1
      color2: topColor2,
      isFlipped: isFlippedTop
    } -%}
  {%- endif -%}

  <section class="c-newsletter">
    <div class="c-newsletter__inner">
      <div class="c-newsletter__container">
        {%- comment -%} Title {%- endcomment -%}
        <h2 class="c-newsletter__title">
          {{- title -}}
        </h2>

        {%- comment -%} Background Illustration {%- endcomment -%}
        <div class="c-newsletter__illustration-bg-wrapper">
          <div class="c-newsletter__illustration-bg-container o-responsive-image-container">
            <img
              src="{{- 'svg.shape-11.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-bg o-responsive-image is-mobile"
              width="406"
              height="357"
              lazy="true"
            >
            <img
              src="{{- 'svg.shape-12.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-bg o-responsive-image is-desktop"
              width="796"
              height="528"
              lazy="true"
            >
          </div>
        </div>

        {%- comment -%} Illustration 1 {%- endcomment -%}
        <div class="c-newsletter__illustration-1-wrapper">
          <div class="c-newsletter__illustration-1-container o-responsive-image-container">
            <img
              src="{{- 'svg.envelope.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-1 o-responsive-image is-mobile"
              width="121"
              height="96"
              lazy="true"
            >
            <img
              src="{{- 'svg.envelope-2.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-1 o-responsive-image is-desktop"
              width="302"
              height="218"
              lazy="true"
            >
          </div>
        </div>

        {%- comment -%} Illustration 2 {%- endcomment -%}
        <div class="c-newsletter__illustration-2-wrapper">
          <div class="c-newsletter__illustration-2-container o-responsive-image-container">
            <img
              src="{{- 'svg.flower-3.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-2 o-responsive-image is-mobile"
              width="140"
              height="90"
              lazy="true"
            >
            <img
              src="{{- 'svg.flower-4.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-2 o-responsive-image is-desktop"
              width="350"
              height="175"
              lazy="true"
            >
          </div>
        </div>

        {%- comment -%} Illustration 3 {%- endcomment -%}
        <div class="c-newsletter__illustration-3-wrapper">
          <div class="c-newsletter__illustration-3-container o-responsive-image-container">
            <img
              src="{{- 'svg.shape-9.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-3 o-responsive-image"
              width="982"
              height="674"
              lazy="true"
            >
          </div>
        </div>

        {%- comment -%} Illustration 4 {%- endcomment -%}
        <div class="c-newsletter__illustration-4-wrapper">
          <div class="c-newsletter__illustration-4-container o-responsive-image-container">
            <img
              src="{{- 'svg.shape-10.svg' | asset_url -}}"
              alt=""
              class="c-newsletter__illustration-4 o-responsive-image"
              width="857"
              height="837"
              lazy="true"
            >
          </div>
        </div>

        {%- comment -%} Form {%- endcomment -%}
        {%- render 'form.newsletter' with {
          class: 'c-newsletter__form',
          subtitle: subtitle
        } -%}
      </div>
    </div>
  </section>

  {%- comment -%} Bottom Wave {%- endcomment -%}
  {%- if bottomWave != "0" -%}
    {%- render 'object.wave' with {
      waveNumber:bottomWave
      color1: bottomColor1
      color2: bottomColor2,
      isFlipped: isFlippedBottom
    } -%}
  {%- endif -%}

{%- endif -%}

{% schema %}
{
  "name": "Newsletter",
  "class": "c-section c-section__newsletter",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "header",
      "content": "Top Wave"
    },
    {
      "type": "select",
      "id": "top-wave",
      "label": "Top Wave",
      "default": "0",
      "options": [
        {
          "value": "0",
          "label": "No Wave"
        },
        {
          "value": "1",
          "label": "Wave 1"
        },
        {
          "value": "2",
          "label": "Wave 2"
        },
        {
          "value": "3",
          "label": "Wave 3"
        }
      ]
    },
    {
      "type": "color",
      "id": "top-color-1",
      "label": "Color 1"
    },
    {
      "type": "color",
      "id": "top-color-2",
      "label": "Color 2"
    },
    {
      "type": "checkbox",
      "id": "flip-top-wave",
      "label": "Flip wave vertically",
      "default": false
    },
    {
      "type": "header",
      "content": "Bottom Wave"
    },
    {
      "type": "select",
      "id": "bottom-wave",
      "label": "Bottom Wave",
      "default": "0",
      "options": [
        {
          "value": "0",
          "label": "No Wave"
        },
        {
          "value": "1",
          "label": "Wave 1"
        },
        {
          "value": "2",
          "label": "Wave 2"
        },
        {
          "value": "3",
          "label": "Wave 3"
        }
      ]
    },
    {
      "type": "color",
      "id": "bottom-color-1",
      "label": "Color 1"
    },
    {
      "type": "color",
      "id": "bottom-color-2",
      "label": "Color 2"
    },
    {
      "type": "checkbox",
      "id": "flip-bottom-wave",
      "label": "Flip wave vertically",
      "default": false
    }
  ],
  "presets": [
    {
      "category": "Content",
      "name":"Newsletter"
    }
  ]
}
{% endschema %}