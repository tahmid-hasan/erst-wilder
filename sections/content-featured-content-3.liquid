{%- comment -%}
  Featured Content 3
    Section to show content with some images, illustrations, and content

  Version:
    1.0.0 - 2021/11/10
{%- endcomment -%}

{{ 'sections.featured-content-3.css' | asset_url | stylesheet_tag }}

{%- comment -%} Assign variables {%- endcomment -%}
{%- liquid
  assign image1 = section.settings.image
  assign image2 = section.settings.image-2
  assign title = section.settings.title | escape
  assign description = section.settings.content

  assign topWave = section.settings.top-wave
  assign topColor1 = section.settings.top-color-1
  assign topColor2 = section.settings.top-color-2
  assign isFlippedTop = section.settings.flip-top-wave

  assign bottomWave = section.settings.bottom-wave
  assign bottomColor1 = section.settings.bottom-color-1
  assign bottomColor2 = section.settings.bottom-color-2
  assign isFlippedBottom = section.settings.flip-bottom-wave
-%}

{%- if image1 != blank and title != blank -%}

  {%- comment -%} Top Wave {%- endcomment -%}
  {%- if topWave != "0" -%}
    {%- render 'object.wave' with {
      waveNumber:topWave
      color1: topColor1
      color2: topColor2,
      isFlipped: isFlippedTop
    } -%}
  {%- endif -%}  
  
  <section class="c-featured-content-3">
    <div class="c-featured-content-3__outer">
      <div class="c-featured-content-3__inner">

        {%- comment -%} Images/Illustration Wrapper {%- endcomment -%}
        <div class="c-featured-content-3__image-wrapper {% if image2 == blank %}has-1-image{% endif %}">

          {%- comment -%} Image 1 {%- endcomment -%}
          <div class="c-featured-content-3__image-1-container o-responsive-image-container">
            {%- render 'tool.picture' with {
              image: image1,
              class: "c-featured-content-3__image-1 o-responsive-image",
              width: 710,
              imageSizes:'236,360,610'
              sizes: '375,500,750',
              lazy:true
            } -%}
          </div>

           {%- comment -%} Image 2 {%- endcomment -%}
           <div class="c-featured-content-3__image-2-container o-responsive-image-container">
            {%- render 'tool.picture' with {
              image: image2,
              class: "c-featured-content-3__image-2 o-responsive-image",
              width: 410,
              imageSizes:'136,200,300',
              sizes: '375,500,750',
              lazy:true
            } -%}
          </div>

          {%- comment -%} Background Shape {%- endcomment -%}
          <img
            class="c-featured-content-3__illustration-background"
            src="{{- 'svg.shape-13.svg' | asset_url -}}" alt=""
            width="548" height="514"
          >
        </div>

        {%- comment -%} Content {%- endcomment -%}
        <div class="c-featured-content-3__content">

          {%- comment -%} Title{%- endcomment -%}
          <h2 class="c-featured-content-3__title">
            {{- title -}}
          </h2>

          {%- comment -%} Description {%- endcomment -%}
          {%- if description != blank -%}
            <div class="c-featured-content-3__desc featured__content">
              {{- description -}}
            </div>
          {%- endif -%}
        </div>

      </div>
    </div>
  </section>

  {%- comment -%} Bottom Wave {%- endcomment -%}
  {%- if bottomWave != "0" -%}
    {%- render 'object.wave' with {
      waveNumber:bottomWave
      color1: bottomColor1
      color2: bottomColor2,
      isFlipped: isFlippedBottom
    } -%}
  {%- endif -%} 

{%- endif -%}

